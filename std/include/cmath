#ifndef _LENSOROS_CMATH
#define _LENSOROS_CMATH

#define INFINITY (1. / 0.)
#define NAN (0. / 0.)

namespace std {

template <typename _Ty>
constexpr _Ty isnan(_Ty value) noexcept { return value != value; }

template <typename _Ty>
constexpr _Ty isinf(_Ty value) noexcept { return value == INFINITY || value == -INFINITY; }

}

#endif // _LENSOROS_CMATH
